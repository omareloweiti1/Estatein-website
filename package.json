{
  "name": "tailwind-v4-project",
  "version": "1.0.0",
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/style.css -o ./assets/css/output.css --watch",
    "build": "tailwindcss -i ./assets/css/style.css -o ./assets/css/output.css --minify"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.9",
    "swiper": "^11.2.10",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "tailwind": {
    "content": [
      "./*.html",
      "./assets/**/*.{html,js}"
    ],
    "theme": {
      "extend": {
        "fontSize": {
          "heroH1": ["var(--font-size-heroH1)", { "lineHeight": "1.2" }],
          "h1-section": ["var(--font-size-h1-section-xl)", { "lineHeight": "1.25" }],
          "p-xl": ["var(--font-size-p-xl)", { "lineHeight": "1.6" }],
          "card-text": ["var(--font-size-card-xl)", { "lineHeight": "1.5" }],
          "h1-card": ["var(--font-size-h1-card-xl)", { "lineHeight": "1.3" }],
          "card-title": ["var(--font-size-card-title-xl)", { "lineHeight": "1.3" }]
        }
      }
    },
    "plugins": [
      "@tailwindcss/forms",
      "@tailwindcss/typography",
      "@tailwindcss/aspect-ratio",
      "@tailwindcss/container-queries"
    ]
  }
}
